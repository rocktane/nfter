<div class="container">
  <div class="items">
    <h1>Hello <%= current_user.email %>, here is you collection</h1>
  </div>

  <div class="items">
    <h2 class="title">Tous tes NFTs üêµ</h2>

    <div class="row">
    <% @nfts.each do |nft| %>
      <div class="nft d-flex flex-column">
        <div class="image">
          <%= image_tag("image_pilot.png", class: "image-tag") %>
        </div>
        <div class="details">
          <%= link_to nft_path(nft) do %>
            <div class="item item-name"><strong><%= nft.name %></strong></div>
          <% end %>
            <div class="item description"><%= nft.description %></div>
            <div class="item price">$<%= nft.price %>/week</div>
          </div>
        </div>
      <% end %>
    </div>
  </div>

</div>

<div class="add-section">
  <div class="text-add">Ajouter un NFT</div>
  <%= link_to ('<i class="fa-solid fa-plus"></i>').html_safe, new_nft_path, class: "add-nft" %>
</div>

<div>
  <h1>Transactions Pending:</h1>

  <table>
    <thead>
      <tr>
        <th>Begin date</th>
        <th>End date</th>
        <th>Price</th>
        <th>Owner</th>
        <th>NFT</th>
        <th>Buyer</th>
        <th>Actions</th>
      </tr>
    </thead>

    <tbody>
      <% @transactions.each do |transaction| %>
        <tr>
          <td><%= transaction.begin_date %></td>
          <td><%= transaction.end_date %></td>
          <td><%= transaction.price %></td>
          <td><%= transaction.owner_id %></td>
          <td><%= transaction.nft_id %></td>
          <td><%= transaction.buyer_id %></td>
          <td>
            <%= link_to 'Accept', accept_transaction_path(transaction), method: :patch %>
            <%= link_to 'Decline', decline_transaction_path(transaction), method: :patch %>
          </td>
        </tr>
      <% end %>
    </tbody>

</div>
