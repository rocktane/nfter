<div class="container">

  <div class="items">
    <h2 class="title">Hottest NFTs üî•</h2>

    <div class="row">
      <% @nfts.where(availability: true).sample(3).each do |nft| %>
        <%= link_to nft_path(nft) do %>
          <div class="nft d-flex flex-column">
            <div class="image">
            <%# nft.photo.attached? cl_image_tag(nft.key, class: "image-tag") :  %>
              <%= cl_image_tag(nft.key, class: "image-tag") %>
            </div>
            <div class="details">
              <div class="item item-name"><strong><%= nft.name %></strong></div>
              <div class="item description"><%= nft.description %></div>
              <div class="item price">$<%= nft.price %>/week</div>
            </div>
          </div>
        <% end %>
      <% end %>
    </div>
  </div>

  <div class="items">
    <h2 class="title">Tous les NFTs üêµ</h2>

    <div class="row">
    <% @nfts.each do |nft| %>
        <%= link_to nft_path(nft) do %>
          <div class="nft d-flex flex-column">
            <div class="image">
              <%= image_tag("image_pilot.png", class: "image-tag") %>
            </div>
            <div class="details">
              <div class="item item-name"><strong><%= nft.name %></strong></div>
              <div class="item description"><%= nft.description %></div>
              <div class="item price">$<%= nft.price %>/week</div>
            </div>
          </div>
        <% end %>
      <% end %>
    </div>
  </div>

</div>
