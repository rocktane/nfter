<%= simple_form_for @nft do |f| %>
  <%= f.input :photo, as: :file, label: 'NFT' %>
  <%= f.input :name %>
  <%= f.input :description %>
  <%= f.input :price, label: 'Price per day', input_html: { min: 1 } %>
  <%= f.input :availability, label: "Is it currently available?" %>
  <%= f.button :submit %>
<% end %>
